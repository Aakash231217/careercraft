# OpenAI API Key (for AI-powered email generation)
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Credentials (for Gmail integration)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/gmail-callback

# Database (optional - for storing email analytics)
DATABASE_URL=your_database_url_here

# Environment
NODE_ENV=development

# PhonePe Payment Gateway (Live Mode)
PHONEPE_CLIENT_ID=your_phonepe_client_id
PHONEPE_CLIENT_SECRET=your_phonepe_client_secret
PHONEPE_CLIENT_VERSION=1
PHONEPE_MERCHANT_ID=your_phonepe_merchant_id
PHONEPE_LIVE_URL=https://api.phonepe.com/apis/hermes
